<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="0"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="100"
               android:scaleX="1.3" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="0"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="0"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="100"
               android:scaleY="1.3" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="0"
               android:translationY="0dp" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="100"
               android:translationY="-60dp" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="0"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="0"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="100"
               android:scaleX="1.3" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="0"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="100"
               android:scaleY="1.3" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="0"
               android:translationY="0dp" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="100"
               android:translationY="-60dp" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageDonorIv"
               motion:framePosition="50"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/donorHomePageName"
               motion:framePosition="50"
               android:alpha="0" />
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/donorHomePageRecyclerView" />
        <OnClick motion:targetId="@+id/lottieAnimationView5" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/donorHomePageSignoutBtn"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="invisible" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/donorHomePageName"
            motion:layout_constraintTop_toTopOf="@+id/donorHomePageDonorIv"
            android:layout_marginStart="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/donorHomePageDonorIv"
            motion:layout_constraintEnd_toStartOf="@+id/donorHomePageDonorIv"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp" />
        <Constraint
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/donorHomePageRecyclerView"
            motion:layout_constraintTop_toBottomOf="@+id/donorHomePageDonorIv"
            android:layout_marginTop="8dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/donorHomePageSignoutBtn"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible" />
        <Constraint
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/donorHomePageRecyclerView" />
    </ConstraintSet>
</MotionScene>